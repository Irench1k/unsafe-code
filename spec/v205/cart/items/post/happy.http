### Add item with Cookie Auth
# @name cart_with_one_item_cookie
# @forceRef cart_created_plankton
{{
  // v205 uses simple menu without availability tracking
  const item = menu.item(4);  // Krabby Patty
  exports.item_id = item.id;
  exports.cart_id = cart_id_plankton;
  exports.session = await auth.login("plankton");
}}
# @tag cart, happy, r02, v205
POST /cart/{{cart_id}}/items
Cookie: {{session}}
Content-Type: application/json

{ "item_id": "{{item_id}}" }

